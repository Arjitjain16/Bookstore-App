    <form class="container w-50 mt-2 p-5 bg-light" action="/update/<%= book._id %>" method="post"
        enctype="multipart/form-data">
        <h1>Book Store Update Entry</h1>


        <div class="mb-3"><img width="200" src="/images/<%=book.image%>" alt=""></div>

        <input type="hidden" name="oldimage" value="<%= book.image %>">

